<Window x:Class="TicTacToe.AskDimensions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="AskDimensions" Height="172" Width="452">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Center" VerticalAlignment="Bottom">Add meg a játéktér nagyságát (N×N)</Label>
        <TextBox x:Name="inp_Matrix" Grid.Row="1" MaxWidth="200" MaxHeight="20" VerticalAlignment="Top">5</TextBox>
        <Button Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30 5 30 5" Click="ButtonBase_OnClick">OK</Button>

    </Grid>
</Window>
